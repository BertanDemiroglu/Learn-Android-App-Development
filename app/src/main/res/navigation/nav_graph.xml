<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.bertan.learnandroidappdevelopment.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_mainFragment_to_tutorialFragment"
            app:destination="@id/tutorialFragment" />
    </fragment>
    <fragment
        android:id="@+id/tutorialFragment"
        android:name="com.bertan.learnandroidappdevelopment.TutorialFragment"
        android:label="fragment_tutorial"
        tools:layout="@layout/fragment_settings" >
        <action
            android:id="@+id/action_tutorialFragment_to_mainFragment2"
            app:destination="@id/mainFragment" />
    </fragment>
</navigation>